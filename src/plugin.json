{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Cribl Search",
  "id": "cribl-search-datasource",
  "metrics": true,
  "info": {
    "description": "Cribl Search",
    "author": {
      "name": "Cribl, Inc."
    },
    "keywords": ["datasource"],
    "logos": {
      "small": "img/cribl_logo.svg",
      "large": "img/cribl_logo.svg"
    },
    "links": [],
    "screenshots": [
      {
        "name": "Configuration",
        "path": "img/screenshot_config.png"
      },
      {
        "name": "Querying",
        "path": "img/screenshot_query.png"
      }
    ],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=9.5.2",
    "plugins": []
  },
  "routes": [
    {
      "path": "productionAuth",
      "url": "https://login.cribl.cloud/oauth/token",
      "headers": [
        {
          "name": "Content-Type",
          "content": "application/json"
        }
      ],
      "body": {
        "grant_type": "client_credentials",
        "client_id": "{{ .JsonData.clientId }}",
        "client_secret": "{{ .SecureJsonData.clientSecret }}",
        "audience": "https://api.cribl.cloud"
      }
    },
    {
      "path": "stagingAuth",
      "url": "https://login.cribl-staging.cloud/oauth/token",
      "headers": [
        {
          "name": "Content-Type",
          "content": "application/json"
        }
      ],
      "body": {
        "grant_type": "client_credentials",
        "client_id": "{{ .JsonData.clientId }}",
        "client_secret": "{{ .SecureJsonData.clientSecret }}",
        "audience": "https://api.cribl-staging.cloud"
      }
    },
    {
      "path": "localAuth",
      "url": "{{ .JsonData.criblOrgBaseUrl }}/api/v1/auth/login",
      "headers": [
        {
          "name": "Content-Type",
          "content": "application/json"
        }
      ],
      "body": {
        "username": "admin",
        "password": "admin"
      }
    },
    {
      "path": "testDatasource",
      "method": "HEAD",
      "url": "{{ .JsonData.criblOrgBaseUrl }}/api/v1/m/default_search/search/saved"
    },
    {
      "path": "query",
      "url": "{{ .JsonData.criblOrgBaseUrl }}/api/v1/m/default_search/search/query"
    }
  ]
}
